{
    "manifest_version": 3,
    "name": "AutoRefresh",
    "version": "1.0",
    "description": "Automatically refreshes a webpage at specified intervals.",
    "permissions": ["tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons8-refresh-16.png",
            "48": "icons8-refresh-48.png",
            "128": "icons8-refresh-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}
